{
  "name": "nft-network",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node ace serve --watch",
    "build": "node ace build --production",
    "start": "node server.js",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "reset": "sh ./scripts/reset.sh"
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.6.2",
    "@babel/preset-react": "^7.16.7",
    "@japa/preset-adonis": "^1.0.15",
    "@japa/runner": "^2.0.7",
    "@symfony/webpack-encore": "^1.8.2",
    "@types/react": "^18.0.6",
    "adonis-preset-ts": "^2.1.0",
    "autoprefixer": "^10.4.4",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-adonis": "^2.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "node-polyfill-webpack-plugin": "^1.1.4",
    "pino-pretty": "^7.6.1",
    "postcss": "^8.4.12",
    "postcss-loader": "^6.2.1",
    "prettier": "^2.6.2",
    "sass": "^1.50.1",
    "sass-loader": "^12.6.0",
    "tailwindcss": "^3.0.24",
    "typescript": "~4.6",
    "youch": "^3.1.1",
    "youch-terminal": "^2.1.3"
  },
  "dependencies": {
    "@adonisjs/auth": "^8.1.0",
    "@adonisjs/core": "^5.6.0",
    "@adonisjs/lucid": "^17.2.0",
    "@adonisjs/repl": "^3.1.0",
    "@adonisjs/session": "^6.2.0",
    "@adonisjs/shield": "^7.0.0",
    "@adonisjs/view": "^6.1.0",
    "@spices/basil": "^1.8.0",
    "axios": "^0.26.1",
    "babel-polyfill": "^6.26.0",
    "classnames": "^2.3.1",
    "luxon": "^2.3.2",
    "pg": "^8.7.3",
    "phc-bcrypt": "^1.0.7",
    "proxy-addr": "^2.0.7",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-icons": "^4.3.1",
    "react-router-dom": "^6.3.0",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21",
    "use-named-state": "^1.0.0"
  }
}
